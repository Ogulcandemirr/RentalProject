@using EntityLayer.Concrete
@model List<Car>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Araç Seçimi</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Rezervasyon Oluştur </li>
            </ul>
        </div>
    </div>
</section>

<div class="container-fluid my-4" style="background-color: #f9f9f9; padding: 30px;">
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-center align-items-center">
                <div class="me-4" style="width: 240px;">
                    <div class="d-flex justify-content-center">
                        <div class="fw-bold fs-4" style="width: 50px; height: 50px; border-radius: 50%; background-color: #007bff; color: #fff; display: flex; align-items: center; justify-content: center; font-size: 1.5rem;">1</div>
                    </div>
                    <div class="text-center mt-2" style="font-size: 1.2rem;">Araç Seçimi</div>
                </div>

                <div class="me-4" style="width: 240px;">
                    <div class="border-top" style="border-top: 2px solid #000; height: 50px;"></div>
                </div>

                <div class="me-4" style="width: 240px;">
                    <div class="d-flex justify-content-center">
                        <div class="fw-bold fs-4" style="width: 50px; height: 50px; border-radius: 50%; background-color: #6c757d; color: #fff; display: flex; align-items: center; justify-content: center; font-size: 1.5rem;">2</div>
                    </div>
                    <div class="text-center mt-2" style="font-size: 1.2rem;">Rezervasyon Bilgileri</div>
                </div>

                <div class="me-4" style="width: 240px;">
                    <div class="border-top" style="border-top: 2px solid #000; height: 50px;"></div>
                </div>

                <div class="me-4" style="width: 240px;">
                    <div class="d-flex justify-content-center">
                        <div class="fw-bold fs-4" style="width: 50px; height: 50px; border-radius: 50%; background-color: #6c757d; color: #fff; display: flex; align-items: center; justify-content: center; font-size: 1.5rem;">3</div>
                    </div>
                    <div class="text-center mt-2" style="font-size: 1.2rem;">Ödeme Bilgisi</div>
                </div>
            </div>
        </div>
    </div>
</div>


<section class="w3l-grids-3 py-5" style="background-color: #f9f9f9; padding: 20px;">
    <div class="container py-md-5">
        <div class="row bottom-ab-grids">
            <!--/row-grids-->
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="subject-card" style="border: none; border-radius: 12px; overflow: hidden; box-shadow: 0 6px 12px rgba(0,0,0,0.2); background: #fff; display: flex; flex-direction: column; height: 100%;">
                        <div class="subject-card-header" style="padding: 0;">
                            <img src="@item.Image" style="width: 100%; height: 200px; object-fit: cover; border-bottom: 2px solid #ddd;" alt="">
                        </div>
                        <div class="subject-card-body" style="padding: 1rem;">
                            <h4 style="font-size: 1.75rem; margin: 0.5rem 0; color: #333;">@item.Name</h4>
                            <p style="margin: 0; color: #666; font-style: italic;">@item.Date</p>
                            <div class="dst-btm" style="display: flex; justify-content: space-between; align-items: center; margin: 0.5rem 0;">
                                <h6 style="margin: 0; font-size: 1.25rem; color: #555;">Şimdi Kirala</h6>
                                <span style="font-size: 1.5rem; font-weight: bold; color: #007bff;">@item.Price ₺</span>
                            </div>
                            <p class="sub-para" style="margin: 0.5rem 0; color: #777;">@item.Description</p>
                        </div>
                        <div class="card-footer" style="padding: 1rem; border-top: 2px solid #ddd; text-align: center; background: #f8f9fa;">
                            <a href="/Reservation/AddReservation/Form?image=@item.Image&name=@item.Name&date=@item.Date&price=@item.Price&description=@item.Description"
                               style="display: inline-block; background-color: #007bff; color: #fff; padding: 0.75rem 1.5rem; text-decoration: none; font-weight: bold; border-radius: 25px; transition: background-color 0.3s ease; font-size: 1rem;">
                                Aracı Seç
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<script>
    function selectItem(image, name, date, price, description) {
        // Form alanlarını güncelle
        document.getElementById('selectedImage').src = image;
        document.getElementById('selectedName').value = name;
        document.getElementById('selectedDate').value = date;
        document.getElementById('selectedPrice').value = price;
        document.getElementById('selectedDescription').value = description;
    }
</script>











