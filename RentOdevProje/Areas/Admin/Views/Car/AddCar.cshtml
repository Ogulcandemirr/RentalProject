@model EntityLayer.Concrete.Car

@{
	ViewData["Title"] = "AddCar";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>
	<h1>Yeni Araba Oluşturma Sayfası</h1>
	<form method="post">
		<div class="form-group">
			@Html.Label("Araç")
			<input type="text" asp-for="Name" class="form-control" />
		</div>
		<br />
		<div class="form-group">
			@Html.Label("Tarih")
			<input type="text" asp-for="Date" class="form-control" />
		</div>
		<br />
		<div class="form-group">
			@Html.Label("Tanım")
			<input type="text" asp-for="Description" class="form-control" />
		</div>
		<br />
		<div class="form-group">
			@Html.Label("Fiyat")
			<input type="text" asp-for="Price" class="form-control" />
		</div>
		<br />
		<div class="form-group">
			@Html.Label("Ana Görsel")
			<input type="text" asp-for="Image" class="form-control" />
		</div>
		<br />
		<div class="form-group">
			@Html.Label("Kapasite")
			<input type="text" asp-for="Capacity" class="form-control" />
		</div>
		<br />
		<div class="form-group">
			@Html.Label("Kapak Görsel")
			<input type="text" asp-for="CoverImage" class="form-control" />
		</div>
		<br />
		<div class="form-group">
			@Html.Label("Görsel 2")
			<input type="text" asp-for="Image2" class="form-control" />
		</div>
		<br />
		<div class="form-group">
			@Html.Label("Detay 1")
			<textarea cols="30" rows="5" class="form-control" asp-for="Details1"></textarea>
		</div>
		<br />
		<div class="form-group">
			@Html.Label("Detay 2")
			<textarea cols="30" rows="5" class="form-control" asp-for="Details2"></textarea>
		</div>
		<br />
		<button class="btn btn-primary">Oluştur</button>
	</form>

</h1>

